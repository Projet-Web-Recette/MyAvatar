{% extends 'base.html.twig' %}

{% block page_title %}Mon profil{% endblock %}

{% block page_content %}
    <div class="section flex flex-row justify-center items-center space-x-24">
        <div class="flex flex-col justify-center items-center p-6 rounded-2xl text-center border-4 border-black-main black-shadow-box space-y-12 h-72">
            <img src="{{ asset('uploads/pp/' ~ app.user.profilePicture) }}" alt="Profile picture" class="rounded-full w-24 h-24 border-2 border-black-main black-shadow-box select-none">
            <div class="flex flex-col justify-center items-start gap-2">
                <div class="flex flex-row justify-center items-center gap-2">
                    <span class="material-symbols-outlined text-blue-main select-none">face</span>
                    <span class="text-2xl text-center font-bold">{{ app.user.login }}</span>
                </div>
                <div class="flex flex-row justify-center items-center gap-2">
                    <span class="material-symbols-outlined text-blue-main select-none">mail</span>
                    <span class="text-2xl text-center font-bold">{{ app.user.email }}</span>
                </div>
            </div>
        </div>

        <div class="flex flex-col justify-center items-center gap-2 space-y-8 h-72">
            <span class="flex items-center text-4xl font-bold text-center bungee-font h-full select-none">Actions</span>
            <div class="grid grid-cols-2 gap-8">
                <a href="{{ path('edit_pp') }}"
                   class="p-6 rounded-2xl text-center border-4 border-black-main black-shadow-box hover:bg-gray-300 transition-all duration-200">
                    <h2 class="text-2xl font-bold">&#128221; Modifier l'image de profil</h2>
                </a>
                <a href="{{ path('edit_password') }}"
                   class="p-6 rounded-2xl text-center border-4 border-black-main black-shadow-box hover:bg-gray-300 transition-all duration-200">
                    <h2 class="text-2xl font-bold">&#128275; Modifier le mot de passe</h2>
                </a>
                <a href="{{ path('logout') }}"
                   class="p-6 rounded-2xl text-center border-4 border-black-main black-shadow-box hover:bg-gray-300 transition-all duration-200">
                    <h2 class="text-2xl font-bold">&#128682; Se d√©connecter</h2>
                </a>
            </div>
        </div>
    </div>
{% endblock %}